<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivKotlin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/ic_kotlin_icon"
            android:transitionName="image_kotlin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/kotlinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="text_title_small"
            android:text="Kotlin"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivKotlin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivKotlin"
            app:layout_constraintTop_toTopOf="@+id/ivKotlin" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
